<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
    </style>

        <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:layout_marginTop">@dimen/normal_margin</item>
            <item name="android:backgroundTint">@color/white</item>
            <item name="android:fontFamily">@font/ys_display</item>
            <item name="android:gravity">start</item>
            <item name="android:paddingStart">@dimen/main_padding</item>
            <item name="android:paddingEnd">@dimen/main_padding</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:textSize">@dimen/normal_text</item>
        </style>


        <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">0dp</item>
            <item name="android:layout_weight">1</item>
            <item name="android:backgroundTint">@color/MainButton</item>
            <item name="android:fontFamily">@font/ys_display</item>
            <item name="android:foreground">?attr/selectableItemBackground</item>
            <item name="android:textAllCaps">false</item>
            <item name="android:textColor">@color/MainButtonText</item>
            <item name="android:textSize">@dimen/big_text</item>

        </style>

</resources>