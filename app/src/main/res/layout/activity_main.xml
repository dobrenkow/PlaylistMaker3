<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/main_padding"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display"
        android:text="@string/app_name"
        android:textColor="@color/MainButton"
        android:textSize="@dimen/big_text"
        android:textStyle="bold" />

    <Button
        android:id="@+id/search_button"
        style="@style/MainButtonStyle"
        android:layout_marginTop="@dimen/big_margin"
        android:text="@string/search"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/search_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/MainButtonText" />

    <Button
        android:id="@+id/library_button"
        style="@style/MainButtonStyle"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:text="@string/musicLibrary"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/library_music_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/MainButtonText" />

    <Button
        android:id="@+id/settings_button"
        style="@style/MainButtonStyle"
        android:layout_marginBottom="@dimen/big_margin"
        android:layout_weight="1"
        android:text="@string/settings"
        app:cornerRadius="@dimen/button_corner_radius"
        app:icon="@drawable/settings_icon"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/MainButtonText" />


</LinearLayout>